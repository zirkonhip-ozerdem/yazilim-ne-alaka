// Hero bölümü: girişteki grid yapı
---

<style>
  .hero-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    padding: 2rem;
    
  }

  .card {
    background: white;
    border-radius: 1.5rem;
    min-height: 200px;
  }
  /* Tüm kart linkleri için genel stil */
.card-link {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-decoration: none; /* alt çizgi olmasın */
  color: inherit; /* metin rengi bozulmasın */
  transition: transform 0.2s ease;
}

.card-link:hover {
  transform: scale(1.02);
  cursor: pointer;
}
  .cardfrontend {
    background: white;
    border-radius: 1.5rem;
    min-height: 50px;
    min-width: 300px;
  }
  .cardfrontend2 {
    background: #f974a6;
    border-radius: 1.5rem;
    min-height: 150px;
    min-width: 330px;
  }

  .cardmagazin{
     background: white;
     border-radius: 1.5rem;
    min-height: 150px;
    min-width: 330px;
  }
   .cardbackend {
    background: white;
    border-radius: 1.5rem;
    min-height: 50px;
    min-width: 200px;
  }
  .highlight-card {
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-radius: 1.5rem;
    padding: 1rem;
    font-weight: bold;
    font-size: 1rem;
    min-height: 200px;
  }

  .card-frontend {
    background-color: #E885AD;
  }

  .card-backend {
    background-color: #8DD0F4;
  }

  .card-server {
    background-color: #F0A7BE;
  }

  .arrow {
    align-self: flex-end;
    font-size: 1.5rem;
    margin-top: auto;
  }

  .arrowhite {
    align-self: flex-end;
    font-size: 1.5rem;
    margin-top: auto;
     color: #f974a6;
  }
  .magazinyazi{
    color: #f974a6;
  }
  @media (max-width: 768px) {
    .hero-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

