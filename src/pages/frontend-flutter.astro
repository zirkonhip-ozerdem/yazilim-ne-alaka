      .ladder-container {
        flex-direction: column;
      }
      
      .ladder-container img {
        max-width: 100%;
        margin-bottom: 1.5rem;
      }
      
      .step, .step2 {
        width: 100%;
      }
    }

    @media (min-width: 768px) and (max-width: 1023px) {
